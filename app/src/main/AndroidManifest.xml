        android:supportsRtl="true"
        android:theme="@style/Theme.BCPCurrency">
        <activity android:name=".ui.activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.CurrencyRatesActivity"/>
        <activity android:name=".ui.activities.CurrencyCalculatorActivity" />
    </application>

</manifest>